# Copy this file to .env and fill in your actual values

# ========== API Configuration ==========
# At least one API key is required

# Google/Gemini API (Required for RAG embeddings)
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Claude API (Optional)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API (Optional)
OPENAI_API_KEY=your_openai_api_key_here

# ========== Model Configuration ==========
# DBRHEO_MODEL=gemini-2.5-flash

# ========== Project Prompt Configuration ==========
# Priority: AGENT_PROJECT_PROMPT > ./PROJECT.md > ./AGENT.md > ~/.dbrheo/PROJECT.md
AGENT_PROJECT_PROMPT=./PROMPT.md

# System Prompt Override
# DATABASE_AGENT_SYSTEM_MD=false

# ========== Server Configuration ==========
DBRHEO_HOST=localhost
DBRHEO_PORT=8000
DBRHEO_DEBUG=true

# ========== Logging Configuration ==========
DBRHEO_LOG_LEVEL=INFO

# ========== Agent Configuration ==========
DBRHEO_MAX_TURNS=100
DBRHEO_COMPRESSION_THRESHOLD=0.7
DBRHEO_AUTO_EXECUTE=false
DBRHEO_ALLOW_DANGEROUS=false

# ========== Monitoring Configuration (Optional) ==========
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=dbrheo

# ========== RAG System Configuration ==========

# Gemini Embedding API (Required for RAG)
GEMINI_API_KEY=your_gemini_api_key_here

# Qdrant Vector Database Configuration
RAG_VECTOR_DB=qdrant  # Options: qdrant, memory
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=your_qdrant_api_key_here  # Optional for local, required for cloud
# QDRANT_PATH=./qdrant_storage  # Optional: Local disk persistence path

# Embedding Model Configuration
RAG_EMBEDDING_DIM=768  # Options: 768, 1536, 3072 (768 recommended for performance)
RAG_DEFAULT_COLLECTION=default
RAG_DISTANCE_METRIC=cosine  # Options: cosine, dot, euclidean

# Qwen3 Reranker Configuration (Optional but recommended)
RAG_USE_RERANKER=false  # Set to true to enable reranking
RERANKER_MODEL_PATH=/path/to/your/Qwen3-Reranker-8B  # Required if reranker is enabled

# RAG Performance Tuning
RAG_BATCH_SIZE=10  # Batch size for processing
RAG_MAX_RETRIES=3  # Maximum retry attempts for API calls
RAG_TIMEOUT=30  # Timeout in seconds

# ========== Code Execution Tool Configuration (Optional) ==========
# CODE_EXECUTION_LANGUAGES=python,javascript,shell,sql
# CODE_EXECUTION_MAX_OUTPUT=1048576
# CODE_EXECUTION_TEMP_DIR=/tmp

# ========== Shell Tool Security Configuration (Optional) ==========
# SHELL_WHITELIST=git,ls,pwd,cat,grep,find,ps,df,du,whoami,mysql,mysqldump,psql,pg_dump
# SHELL_BLACKLIST=rm,sudo,chmod,mkfs,format,fdisk,dd,reboot,shutdown
# SHELL_DB_COMMANDS=mysql,psql,sqlite3,mysqldump,pg_dump,mongodump,redis-cli
# SHELL_MAX_OUTPUT=1048576
# SHELL_STRICT_WHITELIST=false

# ========== Input Enhancement Configuration ==========
DBRHEO_ENHANCED_INPUT=true

# Bottom Input Box Settings
DBRHEO_ENHANCED_LAYOUT=false

# Fixed Bottom Input Box Configuration
DBRHEO_ENHANCED_LAYOUT=false
DBRHEO_INPUT_HEIGHT_MIN=3
DBRHEO_INPUT_HEIGHT_MAX=8
DBRHEO_HISTORY_MAX_LINES=1000
DBRHEO_AUTO_SCROLL=true
DBRHEO_SHOW_SEPARATOR=true

# ========== Multiline Input Configuration ==========
DBRHEO_MULTILINE_ENABLED=true
DBRHEO_MULTILINE_INDICATOR=...
DBRHEO_MAX_DISPLAY_LINES=10

# Multiline Input Mode Settings
DBRHEO_MULTILINE_END_MODE=empty_line  # Options: empty_line, double_empty
DBRHEO_AUTO_MULTILINE=true
DBRHEO_AUTO_PASTE_DETECTION=true
DBRHEO_MIN_PASTE_LINES=2
DBRHEO_MAX_PASTE_LINES=100
DBRHEO_SHOW_PASTE_PREVIEW=true
DBRHEO_DEBUG_PASTE=true

# Windows-specific Settings
DBRHEO_PASTE_MAX_ATTEMPTS=5
DBRHEO_PASTE_WAIT_TIME=0.5

# Multiline Triggers
DBRHEO_MULTILINE_TRIGGERS=triple_quote_double,triple_quote_single,backticks,angle_brackets

